/**index.wxss**/
page{
  background-color: #f0f0f0;
  height: 100%;
}
.wrap{
  padding: 50rpx 40rpx;
}
.section{
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}
.input-info{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 15rpx;
  margin-left: 10rpx;
}
.input-info image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.input-info text{
  font-size: 28rpx;
  color: #000;
}
.section input{
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background-color: #fff;
  font-size: 32rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border: 1px solid #EBEBEB;
}
.section textarea{
  width: 100%;
  height: 180rpx;
  background-color: #fff;
  font-size: 32rpx;
  padding:20rpx;
  box-sizing: border-box;
  border: 1px solid #EBEBEB;
}
form button{
  width: 100%;
  height: 94rpx;
  line-height: 90rpx;
  background-color: #90AEFF;
  border-radius: 10rpx;
  border: none;
  color: #fff;
  margin-top: 95rpx;
}
.button-hover{
  background: rgba(144, 174, 255, .8)
}