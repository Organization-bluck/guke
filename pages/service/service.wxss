/* pages/service/service.wxss */
.card-box{
  padding: 60rpx 20rpx;
}
.card{
  width: 720rpx;
  height: 389rpx;
  position: relative;
  margin-bottom: 30rpx;
}
.card-info{
  width: 190rpx;
  height: 75rpx;
  line-height: 75rpx;
  position: absolute;
  top: 50rpx;
  right: 0;
  font-size: 30rpx;
  color: #000;
  letter-spacing: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.card-info image{
  width: 50rpx;
  height: 48rpx;
}
.card-prace .prace{
  font-size: 64rpx;
  color: #fff;
  padding-top: 60rpx;
  margin-left:38rpx;
}
.card-prace text{
  font-size: 24rpx;
  color: #fff;
  margin-left:38rpx;
}
.card-tip{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #ABA2A2;
  font-size: 24rpx;
  position: absolute;
  bottom: 52rpx;
  left: 0;
}